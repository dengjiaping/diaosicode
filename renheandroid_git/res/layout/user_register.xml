        layout="@layout/archive_common_top1" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLayout"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/new_register_area"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/register_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/new_register_area"
                 />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/separate_line" 
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/register_area_tel_headnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_register_et_p"
                android:editable="false"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/renhe_login_edittext_paddingbottom_top"
                android:paddingLeft="@dimen/renhe_login_edittext_paddingleft"
                android:paddingRight="@dimen/renhe_login_edittext_paddingleft"
                android:paddingTop="@dimen/renhe_login_edittext_paddingbottom_top"
                android:textColor="@color/black"
                android:textSize="@dimen/renhe_login_edittext_textsize" />

            <com.itcalf.renhe.view.ClearableEditText
                android:id="@+id/register_user_telnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-3dp"
                android:layout_toRightOf="@+id/register_area_tel_headnum"
                android:layout_alignBottom="@+id/register_area_tel_headnum"
                android:background="@drawable/new_register_et_p"
                android:hint="@string/new_register_tel"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:paddingBottom="@dimen/renhe_login_edittext_paddingbottom_top"
                android:paddingLeft="@dimen/renhe_login_edittext_paddingleft"
                android:paddingTop="@dimen/renhe_login_edittext_paddingbottom_top"
                android:textColor="@color/black"
                android:textSize="@dimen/renhe_login_edittext_textsize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pwRl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/renhe_register_content_linearlayout_item_margintop"
            android:gravity="center_horizontal" >

           <!--  <TextView
                android:id="@+id/pwd_tv"
                style="@style/titleTextSizeWithBlack"
                android:layout_centerVertical="true"
                android:text="设置密码"
                android:textSize="@dimen/renhe_login_edittext_textsize" /> -->

            <com.itcalf.renhe.view.ClearableEditText
                android:id="@+id/pwdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_register_et_p"
                android:hint="请设置密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/renhe_login_edittext_paddingbottom_top"
                android:paddingLeft="@dimen/renhe_login_edittext_paddingleft"
                android:paddingTop="@dimen/renhe_login_edittext_paddingbottom_top"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/renhe_login_edittext_textsize" />
             <TextView
                android:id="@+id/pwd_tv_hint"
                style="@style/titleTextSizeWithBlack"
                android:layout_centerVertical="true"
                android:hint="@string/passwordrule_count"
                android:textSize="@dimen/register_pwd_hint_textsize"
                android:layout_below="@+id/pwdEt" />
        </RelativeLayout>
        
      <!--    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/renhe_register_content_linearlayout_item_margintop"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/repwd_tv"
                style="@style/titleTextSizeWithBlack"
                android:layout_centerVertical="true"
                android:text="确认密码"
                android:textSize="@dimen/renhe_login_edittext_textsize" />

            <com.itcalf.renhe.view.ClearableEditText
                android:id="@+id/repwdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_register_et_p"
                android:hint="请再次输入密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/renhe_login_edittext_paddingbottom_top"
                android:paddingLeft="@dimen/renhe_login_edittext_paddingleft"
                android:paddingTop="@dimen/renhe_login_edittext_paddingbottom_top"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/renhe_login_edittext_textsize" />
        </RelativeLayout> -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center" >

            <Button
                android:id="@+id/registerBt"
                style="@style/titleTextSizeWithBlack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/auth_retry_bt_p_shape"
                android:clickable="false"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/renhe_login_button_textsize" >
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/renhe_register_content_linearlayout_item_margintop"
            android:gravity="left" >

            <TextView
                android:id="@+id/read_agree"
                style="@style/titleTextSizeWithBlack"
                android:layout_centerVertical="true"
                android:text="我已阅读并同意"
                android:textSize="@dimen/renhe_login_noaccount_textsize" />

            <TextView
                android:id="@+id/clauseTv"
                style="@style/titleTextSizeWithBlack"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/read_agree"
                android:text="人和网服务条款"
                android:textColor="@color/new_register_clause"
                android:textSize="@dimen/renhe_login_noaccount_textsize" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>