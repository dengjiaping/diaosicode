<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hall_list_bacg"
    android:focusable="true"
    android:focusableInTouchMode="true" >

   <!--  <include
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/renhe_title_height"
        android:layout_alignParentTop="true"
        layout="@layout/send_top" /> -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/receiverrl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
         >

        <ImageButton
            android:id="@+id/selectContactImgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/innermsg_btn_add_selected"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/nameEt"
            style="@style/titleTextSizeWithBlack"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/selectContactImgbtn"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="选择联系人"
            android:padding="@dimen/search_eidt_text_padding"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/themerl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiverrl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
         >

        <EditText
            android:id="@+id/titleEt"
            style="@style/titleTextSizeWithBlack"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="主题"
            android:padding="@dimen/search_eidt_text_padding"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/editLl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:visibility="invisible" >

        <EditText
            android:id="@+id/contentEdt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|top"
            android:maxLength="140"
            android:maxLines="10"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editLl"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editLl1"
        android:layout_below="@+id/themerl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/contentEt"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
               android:background="@color/white"
                android:gravity="left|top"
                android:textSize="16sp"
                android:textColor="@color/black"
                 />

            <!-- <TextView
                android:id="@+id/contentEt_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发自人和网安卓客户端"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/contentEt_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://m.renhe.cn/"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="15dp" /> -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>