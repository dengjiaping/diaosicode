<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topLayout"
        android:orientation="vertical" >

        <Button
            android:id="@+id/settingBt"
            style="@style/titleTextSizeWithBlack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settingbt_selected"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="设置"
            android:textSize="16sp" />

         <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />

        <Button
            android:id="@+id/attentionBt"
            style="@style/titleTextSizeWithBlack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settingbt_selected"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="关注人和网"
            android:textSize="16sp" />

          <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />

        <Button
            android:id="@+id/feedbackBt"
            style="@style/titleTextSizeWithBlack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settingbt_selected"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="意见反馈"
            android:textSize="16sp" />

          <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />
        <Button
            android:id="@+id/shareBt"
            style="@style/titleTextSizeWithBlack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settingbt_selected"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="分享"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />

        <Button
            android:id="@+id/aboutBt"
            style="@style/titleTextSizeWithBlack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settingbt_selected"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="关于"
            android:textSize="16sp" />

         <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />
    </LinearLayout>

   <!--  <include
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/renhe_title_height"
        android:layout_alignParentTop="true"
        layout="@layout/more_top" /> -->

</RelativeLayout>