<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <!-- <include
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/renhe_title_height"
        android:layout_alignParentTop="true"
        layout="@layout/archive_common_top1" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLayout"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         >
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:src="@drawable/bind_phone"
		    />
        <TextView 
            android:id="@+id/isbindTv"
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/bind_nobind"
		    android:textColor="@color/black"
		    android:textStyle="bold" 
		    android:textSize="18sp"
		    android:layout_marginTop="50dp"
		    android:layout_gravity="center_horizontal"
		    />
         <TextView 
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/bind_desc"
		    android:textColor="@color/new_register_tel"
		    android:textSize="15sp"
		    android:layout_marginTop="20dp"
		    />
        <Button
            android:id="@+id/bindBt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/red_bt_selected"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/renhe_login_button_textsize"
            android:text="绑定手机号" >
        </Button>
    </LinearLayout>

</RelativeLayout>