<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_archieve_bcg" >

   <!--  <include
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/renhe_title_height"
        android:layout_alignParentTop="true"
        layout="@layout/archive_edit_top" /> -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_below="@+id/topLayout"
        android:layout_marginBottom="20dp" >

        <LinearLayout
            android:id="@+id/self_info_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/name_sex_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/archieve_edit_item_bacg"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="姓名"
                    android:padding="@dimen/archieve_edit_item_editview_padding"
                    android:textSize="@dimen/archieve_edit_item_text_size" 
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:maxLength="30"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/separate_line" />

                <RadioGroup
                    android:id="@+id/sex_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/archieve_edit_item_sex_editview_padding"
                     >

                    <RadioButton
                        android:id="@+id/female_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="2dp"
                        android:text="男"
                        android:textColor="@color/black"
                        android:checked="true"
                        android:textSize="@dimen/archieve_edit_item_text_size" />

                    <RadioButton
                        android:id="@+id/male_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:drawablePadding="2dp"
                        android:text="女"
                        android:textColor="@color/black"
                        android:textSize="@dimen/archieve_edit_item_text_size" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_industry_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/archieve_edit_item_bacg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/area_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/archieve_edit_item_editview_padding" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:text="所在地"
                        android:textColor="@color/new_archieve_fourbt_textcolor"
                        android:textSize="@dimen/archieve_edit_item_text_size" />

                    <TextView
                        android:id="@+id/area_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/archieve_edit_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/separate_line" />

                <LinearLayout
                    android:id="@+id/industry_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/archieve_edit_item_editview_padding" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:text="从事行业"
                        android:textColor="@color/new_archieve_fourbt_textcolor"
                        android:textSize="@dimen/archieve_edit_item_text_size" />

                    <TextView
                        android:id="@+id/industry_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/archieve_edit_item_text_size" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/can_provide_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/can_provide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我能提供："
                    android:textColor="@color/new_archieve_fourbt_textcolor"
                    android:textSize="@dimen/archieve_edit_item_text_size" />

                <LinearLayout
                    android:id="@+id/can_provide_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/can_provide"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/archieve_edit_item_bacg"
                    android:orientation="vertical" >

                </LinearLayout>

                <ImageButton
                    android:id="@+id/add_can_provide_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/can_provide_group"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/add_one_more" />
            </RelativeLayout>
            
             <RelativeLayout
                android:id="@+id/want_get_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/want_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我想得到："
                    android:textColor="@color/new_archieve_fourbt_textcolor"
                    android:textSize="@dimen/archieve_edit_item_text_size" />

                <LinearLayout
                    android:id="@+id/want_get_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/want_get"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/archieve_edit_item_bacg"
                    android:orientation="vertical" >

                </LinearLayout>

                <ImageButton
                    android:id="@+id/add_want_get_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/want_get_group"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/add_one_more" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>