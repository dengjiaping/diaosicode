<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res/com.itcalf.renhe"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_bacg"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <com.itcalf.renhe.view.RoundCornerImageView
            android:id="@+id/headImage"
            android:layout_width="@dimen/renhe_room_image_wh"
            android:layout_height="@dimen/renhe_room_image_wh"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/avatar"
            attr:radiusXY="@dimen/list_item_round_image_radius" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignTop="@id/headImage"
            android:layout_alignBottom="@id/headImage"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/headImage"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/nameTv"
                style="@style/titleTextSizeWithBlack"
                android:textSize="@dimen/renhe_listview_item_name_textsize" />

            <ImageView
                android:id="@+id/vipImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/nameTv"
                android:layout_alignTop="@id/nameTv"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/nameTv" />

            <ImageView
                android:id="@+id/realnameImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/nameTv"
                android:layout_alignTop="@id/nameTv"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/vipImage" />

             <ImageView
                android:id="@+id/rightImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/nameTv"
                android:layout_alignTop="@id/nameTv"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/realnameImage"
                android:visibility="gone" />
            <TextView
                android:id="@+id/titleTv"
                style="@style/titleTextSizeWithBlack"
                android:layout_below="@id/nameTv"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@color/color777"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/infoTv"
                style="@style/titleTextSizeWithBlack"
                android:layout_below="@id/nameTv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/titleTv"
                android:singleLine="true"
                android:textColor="@color/color777"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/separate_line" />

</RelativeLayout>