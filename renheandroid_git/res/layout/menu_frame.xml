<?xml version="1.0" encoding="utf-8"?>
<!--
     <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res/com.itcalf.renhe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bacg" >

    <ImageView
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/menu_bottom" />

    <TextView
        android:id="@+id/beta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Beta版"
        android:textSize="20sp" 
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/hall_menu_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_bottom"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/action_bar_rl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/renhe_title_height"
            android:background="@color/slidmenu_top_color"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/innermsg_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical" >

                <ImageButton
                    android:id="@+id/innermsg_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/menu_innermsg_selected" />
                <!-- 此处button要加上这个style，不然会诡异的出现button被竖向拉伸且横向无法伸展的情况 -->

                <Button
                    android:id="@+id/innermsg_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/innermsg_bt"
                    android:background="@drawable/unread_slidmenu"
                    android:textColor="@color/white"
                    android:textSize="@dimen/unread_textsize"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/seleprator"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/innermsg_fl"
                android:background="@color/gray2"
                android:visibility="invisible" />

            <View
                android:id="@+id/seleprator2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/seleprator"
                android:background="@color/white"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/notice_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/seleprator2" >

                <ImageButton
                    android:id="@+id/notice_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/menu_notify_selected" />
                <!-- 此处button要加上这个style，不然会诡异的出现button被竖向拉伸且横向无法伸展的情况 -->

                <Button
                    android:id="@+id/notice_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/notice_bt"
                    android:background="@drawable/unread_slidmenu"
                    android:textColor="@color/white"
                    android:textSize="@dimen/unread_textsize"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/setting_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/menu_setting_selected" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />

        <RelativeLayout
            android:id="@+id/selfinfo_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_list_item_bacg"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <com.itcalf.renhe.view.RoundCornerImageView
                android:id="@+id/avatar_img"
                android:layout_width="@dimen/renhe_hall_bottom_image_wh"
                android:layout_height="@dimen/renhe_hall_bottom_image_wh"
                android:src="@drawable/avatar_hall"
                attr:radiusXY="@dimen/round_image_radius" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/avatar_img"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/avatar_img"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nickname_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/lightblackColor"
                    android:textSize="@dimen/archieve_name_size" />

                <TextView
                    android:id="@+id/company_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/blog_item_redirect_text"
                    android:textSize="@dimen/archieve_job_size" />

                <TextView
                    android:id="@+id/job_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/blog_item_redirect_text"
                    android:textSize="@dimen/archieve_job_size" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />

        <LinearLayout
            android:id="@+id/room_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu_list_item_bacg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_room" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="客厅"
                android:textColor="@color/blog_item_redirect_text"
                android:textSize="@dimen/archieve_job_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />

        <LinearLayout
            android:id="@+id/research_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu_list_item_bacg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_research" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="人脉搜索"
                android:textColor="@color/blog_item_redirect_text"
                android:textSize="@dimen/archieve_job_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />

        <LinearLayout
            android:id="@+id/contact_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu_list_item_bacg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_contacts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="联系人"
                android:textColor="@color/blog_item_redirect_text"
                android:textSize="@dimen/archieve_job_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />

        <LinearLayout
            android:id="@+id/share_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu_list_item_bacg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="分享"
                android:textColor="@color/blog_item_redirect_text"
                android:textSize="@dimen/archieve_job_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate_line" />
    </LinearLayout>

</RelativeLayout>