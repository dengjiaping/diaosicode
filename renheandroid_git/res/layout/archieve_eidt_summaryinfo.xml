<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/new_archieve_bcg" >

   <!--  <include
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/renhe_title_height"
        android:layout_alignParentTop="true"
        layout="@layout/archive_edit_top" /> -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topLayout" 
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/mail_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/archieve_edit_item_editview_padding"
            android:paddingRight="@dimen/archieve_edit_item_editview_padding"
            android:paddingBottom="@dimen/archieve_edit_item_editview_padding"
             >

            <LinearLayout
                android:id="@+id/self_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/self_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简介："
                    android:textColor="@color/new_archieve_fourbt_textcolor"
                    android:textSize="@dimen/archieve_edit_item_text_size" />

                <LinearLayout
                    android:id="@+id/editLl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/archieve_edit_item_bacg" >

                    <EditText
                        android:id="@+id/contentEdt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|top"
                        android:maxLength="500"
                        android:minHeight="200dp"
                        android:padding="@dimen/archieve_edit_item_editview_padding"
                        android:textSize="@dimen/archieve_edit_item_text_size" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/profession_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/profession_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人专长："
                    android:textColor="@color/new_archieve_fourbt_textcolor"
                    android:textSize="@dimen/archieve_edit_item_text_size" />

                <LinearLayout
                    android:id="@+id/profession_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profession_tv"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/archieve_edit_item_bacg"
                    android:orientation="vertical" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/add_profession_IB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profession_group"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/add_one_more" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>